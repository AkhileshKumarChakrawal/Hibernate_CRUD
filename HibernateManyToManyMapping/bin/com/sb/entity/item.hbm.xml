<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
    <hibernate-mapping>
    <class name="com.sb.entity.Item" table="item">
    <id name="id" column="item_id"/>
    <property name="price" type="double" column="item_price"/>
    <property name="description" column="item_desc"/>
    <set name="carts" table="cart_items" cascade="all">
    <key column="item_id"/>
    <many-to-many class="com.sb.entity.Cart" column="cart_id"/>
    </set>
    </class>
    </hibernate-mapping>